{% extends 'base.html.twig' %}

{% block title %}Cv index{% endblock %}

{% block body %}
    <h1>Cv index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Prenom</th>
                <th>Age</th>
                <th>Adresse</th>
                <th>Email</th>
                <th>Tel</th>
                <th>NiveauEtude</th>
                <th>ExperienceProf</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for cv in cvs %}
            <tr>
                <td>{{ cv.id }}</td>
                <td>{{ cv.nom }}</td>
                <td>{{ cv.prenom }}</td>
                <td>{{ cv.Age }}</td>
                <td>{{ cv.Adresse }}</td>
                <td>{{ cv.email }}</td>
                <td>{{ cv.tel }}</td>
                <td>{{ cv.NiveauEtude }}</td>
                <td>{{ cv.ExperienceProf }}</td>
                <td>
                    <a href="{{ path('cve_show', {'id': cv.id}) }}">show</a>
                    <a href="{{ path('cve_edit', {'id': cv.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="10">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('cve_new') }}">Create new</a>
{% endblock %}
